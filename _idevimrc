set nonumber
set smartindent
set autoindent
set ignorecase
set smartcase
set clipboard=unnamed

nnoremap <Space>w : w<CR>

nnoremap H ^
nnoremap L $

onoremap 2 i"
onoremap 7 i'
onoremap 8 i(
onoremap [ i[
onoremap { i{
onoremap @ i`

onoremap a2 a"
onoremap a7 a'
onoremap a8 a(
onoremap a, a<
onoremap a@ a`

nnoremap v2 vi"
nnoremap v7 vi'
nnoremap v8 vi(
nnoremap v[ vi[
nnoremap v{ vi{
nnoremap v@ vi`

nnoremap va2 va"
nnoremap va7 va'
nnoremap va8 va(
nnoremap va, va<
nnoremap va@ va`
